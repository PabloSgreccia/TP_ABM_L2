<%- include('../partials/header.ejs') %>

    <div class="main-list">
      <h2 class="new-title">New Fruit</h2>
      <form method="POST" action="/api/store" novalidate>
        <div class="form-input">
          <input type="text" name="fruitType" id="fruitType" placeholder="Fruit" 
          maxlength="20" pattern="^[a-zA-Z]{3,20}$" required>
          <span id="input-alert" class="imhidden">Only letters are allowed, Between 3 and 20 characters</span>
        </div>
        <div class="form-buttons">
          <a href="/fruits/list" class="btn-primary btn-cancel">Cancel</a>
          <button type="submit" id="boton" class="btn-primary">Save</button>
        </div>
      </form>
    </div>

    <!-- ================================================== -->
    <script src="/js/inputValidations.js"></script>
    <script src="/js/fruits/createFruit.js"></script>

  </body>
</html>
