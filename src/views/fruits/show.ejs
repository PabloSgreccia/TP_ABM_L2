<%- include('../partials/header.ejs') %>

<div class="main-list">
      <h2 class="new-title"><%= targetFruit.type %> details:</h2>
      <form method="POST" action="/api/store" novalidate>
        <div class="form-input">
          <label for="id">Id</label>
          <input type="text" name="id" id="id" value="<%= targetFruit.id %>" readonly>
          <label for="fruitType">Fruit</label>
          <input type="text" name="fruitType" id="fruitType" value="<%= targetFruit.type %>" readonly>
        </div>
        <div class="form-buttons">
          <a href="/fruits/edit/<%= targetFruit.id %>" class="btn-primary">Edit</a>
          <button name="boton" id="boton" class="btn-primary btn-delete">Delete</button>
        </div>
      </form>
    </div>

    <!-- ================================================== -->
    <script>
      const $boton = document.getElementById('boton');

      boton.addEventListener('click', async (e) => {
        e.preventDefault();

        let id = document.getElementById('id').value;

        const data = await destroy(id);
        console.log(data);
        console.log(data.status);
        if (data.status === 200) {
          alert(`${data.msg}: ${data.deletedFruit.type}`)
          window.location.href = '/fruits/list';
        } else {
          alert(data.error[0].msg)
        }
      })

      const destroy = async (id, nombre) => {
        try {
          const request = await fetch('http://localhost:3000/fruits/' + id,{
            method:"DELETE",
            headers : {
              "Content-Type": "application/json",
            }
          })
          const datos = await request.json()
          return datos;
        } catch (error) {
          return error;
        }
      }
    </script>
