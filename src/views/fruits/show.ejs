<%- include('../partials/header.ejs') %>

    <main role="main">
      <section class="jumbotron">
        <div class="container">
          <form class="row g-3 needs-validation" method="POST" action="/api/store" novalidate>
            <div class="col-md-12 py-4">
              <label for="fruitType" class="form-label">Fruit</label>
              <input type="text" class="form-control" name="fruitType" id="fruitType" value="<%= targetFruit.type %>" readonly>
              <input type="text" class="form-control" name="id" id="id" value="<%= targetFruit.id %>" hidden>
            </div>
            <div class="col-12">
              <a href="/fruits/edit/<%= targetFruit.id %>" class="btn btn-primary">Edit</a>
              <button class="btn btn-danger" name="boton" id="boton">Eliminar</button>
            </div>
          </form>
          <a href="/fruits/list"><button class="btn btn-secondary" type="button">Back</button></a>
        </div>
      </section>
    </main>

