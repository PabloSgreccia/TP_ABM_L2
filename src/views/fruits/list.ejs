<%- include('../partials/header.ejs') %>

  <div class="main-list container">
    <div class="table-title">
      <h1>Fruits list</h1>
      <!-- <a href="/users/create">
        <span class="material-symbols-outlined">
          playlist_add
        </span>
      </a> -->
    </div>
    
    <table>
      <thead>
        <th>ID</th>
        <th>Fruit</th>
        <th>Actions</th>
      </thead>
      <% if (fruits.length) { %>
        <tbody>
          <% fruits.forEach(fruit => { %>
            <tr>
              <td><%= fruit.id %></td>
              <td><%= fruit.type %></td>
              <td class="actions">
                <a class="list-button common-btn" href="/fruits/show/<%= fruit.id %>">
                  <span class="material-symbols-outlined button-icon">
                    search
                  </span>
                </a>
              </td>
            </tr>
            <% }); %>
      <% } else { %>
        <tbody>
          <tr class="no-data">
            <td colspan="2">You don't have any fruit, try adding one!</td>
            <td>
              <a class="list-create common-btn" href="/fruits/create">Add new fruit</a>
            </td>
          </tr>
      <% }%>
        </tbody>
    </table>
  </div>

  <%- include('../partials/message.ejs') %>

  <a href="/fruits/create" class="floating-button common-btn">
    <span class="material-symbols-outlined">
    playlist_add
    </span>
  </a>
  <br>
  <br>

    <!-- ================================================== -->
    <script src="/js/destroyMessage.js"></script>
  
  </body>
</html>
