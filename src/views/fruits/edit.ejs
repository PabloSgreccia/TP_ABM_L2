<%- include('../partials/header.ejs') %>

    <div class="main-list container">
      <h2 class="new-title">Edit <%= targetFruit.type %>:</h2>
      <form method="POST" action="/api/store" novalidate>
        <div class="form-input">
          <label for="fruitType">Fruit</label>
          <input type="text" name="fruitType" id="fruitType" value="<%= targetFruit.type %>" 
          maxlength="20" pattern="^[a-zA-Z]{3,20}$" required>
          <span id="input-alert" class="hidden">Only letters are allowed, Between 3 and 20 characters.</span>
          <input name="id" id="id" value="<%= targetFruit.id %>" hidden>
        </div>
        <br>
        <div class="form-buttons">
          <a href="/fruits/list" class="common-btn btn-cancel">Cancel</a>
          <button type="submit" id="boton" class="common-btn">Save</button>
        </div>
      </form>
    </div>
    
    <!-- ##################### Scripts #####################  -->
    <script src="/js/inputValidations.js"></script>
    <script src="/js/fruits/editFruit.js"></script>

  </body>
</html>
