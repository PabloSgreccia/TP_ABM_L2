<%- include('../partials/header.ejs') %>
   
    <main role="main">
      
      <div class="album py-5 bg-light">
        <div class="container">
          <div class="tableTitle">
            <h4>Users list</h4>
            <a href="/users/create">
              <button class="btn btn-primary">
                <span class="material-symbols-outlined">
                  playlist_add
                </span>
              </button>
            </a>
          </div>
          <div class="row">
            <table class="table tablte-respondive table-hover">
              <% if (users.length) { %>
                <thead>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
              </thead>
              <tbody>
                  <% users.forEach(user => { %>
                  <tr>
                    <td><%= user.id %></td>
                    <td><%= user.name %></td>
                    <td>
                      <a class="btn btn-primary" href="/users/show/<%= user.id %>">Show details</a>
                    </td>
                  </tr>
                  <% }); %>
                  <% } else { %>
                    <tbody>
                    <tr>
                      <td>You don't have any user, try adding one!</td>
                      <td>
                        <a class="btn btn-primary" href="/users/create">Add new user</a>
                      </td>
                    </tr>
                  <% }%>
                </tbody>
              </table>
          </div>
        </div>
      </div>
    </main>

