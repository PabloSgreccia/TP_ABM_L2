<%- include('../partials/header.ejs') %>
   
    <div class="main-list">

        <div class="table-title">
          <h1>Users list</h1>
          <!-- <a href="/users/create">
            <span class="material-symbols-outlined">
              playlist_add
            </span>
          </a> -->
        </div>
          
        <table>
          <thead>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
          </thead>
          <% if (users.length) { %>
            <tbody>
              <% users.forEach(user => { %>
                <tr>
                  <td><%= user.id %></td>
                  <td><%= user.name %></td>
                  <td class="actions">
                    <a class="list-button" href="/users/show/<%= user.id %>">Show details</a>
                  </td>
                </tr>
                <% }); %>
          <% } else { %>
            <tbody>
              <tr class="no-data">
                <td colspan="2">You don't have any user, try adding one!</td>
                <td>
                  <a class="list-button" href="/users/create">Add new user</a>
                </td>
              </tr>
          <% }%>
            </tbody>
        </table>
    </div>

    <a href="/users/create" class="floating-button">
      <span class="material-symbols-outlined">
        playlist_add
      </span>
    </a>

