<%- include('../partials/header.ejs') %>

    <div class="main-list">
      <h2 class="new-title"><%= targetUser.name %> details:</h2>
      <form method="POST" action="/api/store" novalidate>
        <div class="form-input">
          <label for="name">Name</label>
          <input type="text" name="name" id="name" value="<%= targetUser.name %>" 
            maxlength="20" onkeydown="return /[a-z]/i.test(event.key)" required>
          <input clss="input-hidden" name="id" id="id" value="<%= targetUser.id %>" hidden>
        </div>
        <div class="form-buttons">
          <a href="/users/list" class="btn-primary btn-cancel">Cancel</a>
          <button type="submit" id="boton" class="btn-primary">Save</button>
        </div>
      </form>
    </div>


    <!-- ================================================== -->
    <script>
      const $boton = document.getElementById('boton');

      $boton.addEventListener('click', async (e) => {
        e.preventDefault();

        let name = document.getElementById('name').value;
        let id = document.getElementById('id').value;

        const data = await update(id, name);
        console.log(data);
        if (data.status = 201) {
          // alert(`${data.msg}: ${data.oldName} to ${data.newName}`)
          window.location.href = '/users/list';
        } else {
          alert(data.error[0].msg)
        }
      })

      const update = async (id, name) => {
        try {
          const request = await fetch('http://localhost:3000/users/' + id,{
            method:"PATCH",
            body: JSON.stringify({
              "name": name,
            }),
            headers : {
              "Content-Type": "application/json",
            }
          })
          const datos = await request.json()
          return datos;
        } catch (error) {
          return error;
        }
      }
    </script>
  </body>
</html>
