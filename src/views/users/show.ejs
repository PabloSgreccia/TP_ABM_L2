<%- include('../partials/header.ejs') %>

    <div class="main">
      <form class="row g-3 needs-validation" method="POST" action="/api/store" novalidate>
        <div class="col-md-12 py-4">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" name="name" id="name" value="<%= targetUser.name %>" readonly>
          <input type="text" class="form-control" name="id" id="id" value="<%= targetUser.id %>" hidden>
        </div>
        <div class="col-12">
          <a href="/users/edit/<%= targetUser.id %>" class="btn btn-primary">Edit</a>
          <button class="btn btn-danger" name="boton" id="boton">Delete</button>
        </div>
      </form>
      <a href="/users/list"><button class="btn btn-secondary" type="button">Back</button></a>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script>
      const $boton = document.getElementById('boton');

      boton.addEventListener('click', async (e) => {
        e.preventDefault();

        let id = document.getElementById('id').value;

        const data = await destroy(id);
        if (data.status = 200) {
          alert(`${data.msg}: ${data.deletedUser.name}`)
          window.location.href = '/users/list';
        } else {
          alert(data.error[0].msg)
        }
      })

      const destroy = async (id, nombre) => {
        try {
          const request = await fetch('http://localhost:3000/users/' + id,{
            method:"DELETE",
            headers : {
              "Content-Type": "application/json",
            }
          })
          const datos = await request.json()
          return datos;
        } catch (error) {
          return error;
        }
      }
    </script>
