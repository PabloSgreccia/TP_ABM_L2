<%- include('../partials/header.ejs') %>
    <div class="main-list">
      <h2 class="new-title"><%= targetUser.name %> details:</h2>
      <form method="POST" action="/api/store" novalidate>
        <div class="form-input">
          <label for="id">Id</label>
          <input type="text" name="id" id="id" value="<%= targetUser.id %>" readonly>
          <label for="name">Name</label>
          <input type="text" name="name" id="name" value="<%= targetUser.name %>" readonly>
        </div>
        <div class="form-buttons">
          <a href="/users/edit/<%= targetUser.id %>" class="btn-primary">Edit</a>
          <button name="boton" id="boton" class="btn-primary btn-delete">Delete</button>
          <a href="/users/list" class="btn-primary btn-cancel">Back</a>
        </div>
      </form>
    </div>


    <!-- ================================================== -->
    <script>
      const $boton = document.getElementById('boton');

      boton.addEventListener('click', async (e) => {
        e.preventDefault();

        let id = document.getElementById('id').value;

        const data = await destroy(id);
        if (data.status = 200) {
          // alert(`${data.msg}: ${data.deletedUser.name}`)
          window.location.href = '/users/list';
        } else {
          alert(data.error[0].msg)
        }
      })

      const destroy = async (id, nombre) => {
        try {
          const request = await fetch('http://localhost:3000/users/' + id,{
            method:"DELETE",
            headers : {
              "Content-Type": "application/json",
            }
          })
          const datos = await request.json()
          return datos;
        } catch (error) {
          return error;
        }
      }
    </script>
  </body>
</html>
