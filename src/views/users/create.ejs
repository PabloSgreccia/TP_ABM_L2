<%- include('../partials/header.ejs') %>

    <div class="main-list">
      <h2 class="new-title">New User</h2>
      <form method="POST" action="/api/store" novalidate>
        <div class="form-input">
          <input type="text" name="name" id="name" placeholder="Name" 
          maxlength="20" pattern="^[a-zA-Z ]{3,20}$" required>
          <span id="input-alert" class="imhidden">Only letters and white spaces are allowed, Between 3 and 20 characters.</span>
        </div>
        <div class="form-buttons">
          <a href="/users/list" class="btn-primary btn-cancel">Cancel</a>
          <button type="submit" id="boton" class="btn-primary">Save</button>
        </div>
      </form>
    </div>

    <!-- ================================================== -->
    <script src="/js/inputValidations.js"></script>
    <script src="/js/users/createUser.js"></script>

  </body>
</html>
